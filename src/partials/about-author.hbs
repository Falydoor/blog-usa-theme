<!-- start about the author -->
{{#author}}
<div class="about-author col-sm-12 clearfix">
	{{#if profile_image}}
		<a href="{{url}}" title="{{name}}"><img src="{{img_url profile_image}}" alt="Author image" class="avatar pull-left"></a>
		{{else}}
		<a href="{{url}}" title="{{name}}"><img src="{{asset "images/default-avatar.png"}}" alt="Author image" class="avatar pull-left"></a>
	{{/if}}
	<div class="details">
		<div class="author">
			<a href="{{url}}" class="h5">{{name}}</a>
		</div>
		{{#if bio}}
		<div class="bio">
			{{bio}}
		</div>
		{{/if}}
		<div class="meta-info">
			{{#if location}}
			<span class="loaction"><i class="fa fa-map-marker fa-fw"></i>{{location}}</span>
			{{/if}}
			{{#if website}}
			<span class="website"><a href="{{website}}" targer="_BLANK"><i class="fa fa-linkedin fa-fw"></i>LinkedIn</a></span>
			{{/if}}
		</div>
	</div>
</div>
{{/author}}
<!-- end about the author -->