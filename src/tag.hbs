{{!< default}} {{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}
  <!-- {{> cover-tag}} -->

<div class="container container_page">
  <div class="row row_page">
    <div class="col-md-8">

      <div class="cover-wrap">
        <div class="meta-info pull-right">
          <span><i class="fa fa-signal fa-fw"></i>Total {{plural pagination.total empty='0 Post' singular='% Post'
            plural='% Posts'}}</span>
        </div>
        <h1>{{tag.name}}</h1>
      </div>

      <div class="row default-layout posts page_pagination">
        {{#foreach posts}}
        {{> post-horizontal-card}}
        {{/foreach}}
      </div>

      {{pagination}}
    </div>

    {{> sidebar_home}}
  </div>
</div>